@page
@model PSA_JH_YR_AB.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Booking.ApartmentID" class="control-label">Apartment ID</label>
                <select asp-for="Booking.ApartmentID" class="form-select form-control">
                    @for (int i = 1; i <= 16; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Booking.ApartmentID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.TravellerEmail" class="control-label">Traveller</label>
                <select asp-for="Booking.TravellerEmail" class="form-select form-control" asp-items="@Model.TravellerList"></select>
                <span asp-validation-for="Booking.TravellerEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.CheckIn" class="control-label"></label>
                <input asp-for="Booking.CheckIn" class="form-control" type="date" />
                <span asp-validation-for="Booking.CheckIn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.CheckOut" class="control-label"></label>
                <input asp-for="Booking.CheckOut" class="form-control" type="date" />
                <span asp-validation-for="Booking.CheckOut" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Cost" class="control-label"></label>
                <input asp-for="Booking.Cost" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Booking.Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
