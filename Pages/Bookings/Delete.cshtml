@page
@model PSA_JH_YR_AB.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Apartment @Html.DisplayNameFor(model => model.Booking.TheRoom.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.TheRoom.ID)
        </dd>
        <dt class="col-sm-2">
            Apartment @Html.DisplayNameFor(model => model.Booking.TheRoom.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.TheRoom.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.TheRoom.BedroomCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.TheRoom.BedroomCount)
        </dd>
        <dt class="col-sm-2">
            Traveller @Html.DisplayNameFor(model => model.Booking.TheTraveller.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.TheTraveller.Surname)
        </dd>
        <dt class="col-sm-2">
            Traveller @Html.DisplayNameFor(model => model.Booking.TheTraveller.GivenName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.TheTraveller.GivenName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.CheckIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.CheckIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.CheckOut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.CheckOut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Cost)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Booking.Cost)
        </dd>
    </dl>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <form method="post">
        <div class="row mt-3">
            <input type="hidden" asp-for="Booking.ID" />
            <div style="width: 85px;">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="col-md-3">
                <a asp-page="./Index" class="btn btn-outline-primary w-100">Go Back</a>
            </div>
        </div>
    </form>
</div>
